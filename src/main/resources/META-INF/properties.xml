<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor implementation="de.dm.intellij.liferay.language.properties.LiferayPropertiesFileReferenceContributor"/>
        <properties.implicitPropertyUsageProvider implementation="de.dm.intellij.liferay.language.resourcebundle.LiferayResourceBundlePropertiesImplicitUsageProvider" />
        <properties.implicitPropertyUsageProvider implementation="de.dm.intellij.liferay.gradle.LiferayGradlePropertiesImplicitUsageProvider" />
        <properties.implicitPropertyUsageProvider implementation="de.dm.intellij.liferay.workspace.LiferayWorkspacePropertiesImplicitUsageProvider" />

        <completion.contributor language="Properties" implementationClass="de.dm.intellij.liferay.language.properties.LiferayPortalPropertiesCompletionContributor" />
        <lang.documentationProvider order="first" language="Properties" implementationClass="de.dm.intellij.liferay.language.properties.LiferayPortalPropertiesDocumentationProvider" />

        <psi.referenceContributor implementation="de.dm.intellij.liferay.language.resourcebundle.ResourceBundleReferenceContributor"/>

        <inspectionToolProvider implementation="de.dm.intellij.liferay.language.properties.LiferayPropertiesInspectionToolProvider"/>

        <completion.contributor language="Properties" implementationClass="de.dm.intellij.liferay.gradle.LiferayGradlePropertiesCompletionContributor" />
    </extensions>
</idea-plugin>
