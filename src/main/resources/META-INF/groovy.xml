<idea-plugin>
    <extensions defaultExtensionNs="org.intellij.groovy">
        <!-- Implicit Groovy variables -->
        <membersContributor implementation="de.dm.intellij.liferay.language.groovy.GroovyScriptingImplicitMembersContributor" />
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <inspectionToolProvider implementation="de.dm.intellij.liferay.language.groovy.LiferayGroovyInspectionToolProvider"/>

		<multiHostInjector implementation="de.dm.intellij.liferay.language.groovy.GroovyXPathInjector" />
	</extensions>

</idea-plugin>
