{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://liferay.com/liferay-extension-types.json",
  "title": "OAuth Headless Server Client Extension",
  "definitions": {
    "AssembleItem": {
      "properties": {
        "from": {
          "type": "string"
        },
        "into": {
          "type": "string"
        }
      }
    },
    "OAuthApplicationHeadlessServer": {
      "title": "OAuth Headless Server Client Extension",
      "properties": {
        "type": {
          "type": "string",
          "title": "Type",
          "description": "Defines the type of the client extension",
          "enum": [
            "customElement",
            "fdsCellRenderer",
            "globalCSS",
            "globalJS",
            "iframe",
            "jsImportMapsEntry",
            "staticContent",
            "themeCSS",
            "themeFavicon",
            "themeJS",
            "themeSpritemap",
            "objectAction",
            "workflowAction",
            "notificationType",
            "oAuthApplicationUserAgent",
            "oAuthApplicationHeadlessServer",
            "batch"
          ],
          "x-intellij-enum-metadata": {
            "customElement": {
              "description": "Custom Element"
            },
            "fdsCellRenderer": {
              "description": "Frontend data set cell renderer"
            },
            "globalCSS": {
              "description": "Global CSS"
            },
            "globalJS": {
              "description": "Global JS"
            },
            "iframe": {
              "description": "IFrame"
            },
            "jsImportMapsEntry": {
              "description": "JS Importmaps Entry"
            },
            "staticContent": {
              "description": "Static content"
            },
            "themeCSS": {
              "description": "Theme CSS"
            },
            "themeFavicon": {
              "description": "Theme Favicon"
            },
            "themeJS": {
              "description": "Theme JS"
            },
            "themeSpritemap": {
              "description": "Theme Sprite Map"
            },
            "objectAction": {
              "description": "Object Action"
            },
            "workflowAction": {
              "description": "Workflow Action"
            },
            "notificationType": {
              "description": "Notification Type"
            },
            "oAuthApplicationUserAgent": {
              "description": "OAuth User Agent"
            },
            "oAuthApplicationHeadlessServer": {
              "description": "OAuth Headless Server"
            },
            "batch": {
              "description": "Batch"
            }
          }
        },
        "baseURL": {
          "type": "string",
          "description": "The base path from which all of the client extension’s defined resources are served."
        },
        "name": {
          "type": "string",
          "title": "Name",
          "description": "The client extension’s name (as it appears in the UI). A name is required for front-end client extensions."
        },
        "description": {
          "type": "string",
          "title": "Description",
          "description": "The client extension’s description."
        },
        "sourceCodeURL": {
          "type": "string",
          "default": "https://www.liferay.com",
          "title": "Source Code URL",
          "description": "The address to the client extension’s source repository."
        },
        "homePageURL": {
          "type": "string",
          "default": "https://$[conf:ext.lxc.liferay.com.mainDomain]",
          "description": "The base address of the OAuth2 application profile’s resource server."
        },
        "privacyPolicyURL": {
          "type": "string",
          "description": "The URL for the OAuth2 application profile’s privacy policy."
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of scopes that are associated with the OAuth2 application profile."
        },
        "userAccountEmailAddress": {
          "type": "string",
          "description": "The email address for the user account associated with this OAuth2 application profile. This is only used if the userAccountScreenName property is undefined."
        },
        "userAccountScreenName": {
          "type": "string",
          "description": "The screen name for the user account associated with the OAuth2 application profile. This overrides the value for userAccountEmailAddress."
        }
      },
      "required": [
        "type",
        "name"
      ],
      "additionalProperties": true
    }
  },
  "type": "object",
  "properties": {
    "assemble": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/AssembleItem"
      }
    }
  },
  "additionalProperties": {
    "pattern": "(\\w|\\-)+",
    "type": "object",
    "$ref": "#/definitions/OAuthApplicationHeadlessServer"
  }
}
