{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://liferay.com/liferay-extension-types.json",
  "title": "IFrame Client Extension",
  "definitions": {
    "AssembleItem": {
      "properties": {
        "from": {
          "type": "string"
        },
        "into": {
          "type": "string"
        }
      }
    },
    "IFrame": {
      "title": "IFrame Client Extension",
      "description": "IFrame defines an application URL that will be rendered into an <iframe> element. This provides limited integration with the host page using Liferay's optional client SDK API. Each IFrame client extension is made available as a widget.",
      "x-intellij-html-description": "IFrame defines an application URL that will be rendered into an &lt;iframe&gt; element. This provides limited integration with the host page using Liferay's optional client SDK API. Each IFrame client extension is made available as a widget. <a href='https://learn.liferay.com/en/w/dxp/building-applications/client-extensions/front-end-client-extensions/understanding-custom-element-and-iframe-client-extensions#using-the-iframe-type'>Learn more about IFrame client extensions.</a>",
      "properties": {
        "type": {
          "type": "string",
          "title": "Type",
          "description": "Defines the type of the client extension",
          "enum": [
            "customElement",
            "fdsCellRenderer",
            "globalCSS",
            "globalJS",
            "iframe",
            "jsImportMapsEntry",
            "staticContent",
            "themeCSS",
            "themeFavicon",
            "themeJS",
            "themeSpritemap",
            "objectAction",
            "workflowAction",
            "notificationType",
            "oAuthApplicationUserAgent",
            "oAuthApplicationHeadlessServer",
            "batch"
          ],
          "x-intellij-enum-metadata": {
            "customElement": {
              "description": "Custom Element"
            },
            "fdsCellRenderer": {
              "description": "Frontend data set cell renderer"
            },
            "globalCSS": {
              "description": "Global CSS"
            },
            "globalJS": {
              "description": "Global JS"
            },
            "iframe": {
              "description": "IFrame"
            },
            "jsImportMapsEntry": {
              "description": "JS Importmaps Entry"
            },
            "staticContent": {
              "description": "Static content"
            },
            "themeCSS": {
              "description": "Theme CSS"
            },
            "themeFavicon": {
              "description": "Theme Favicon"
            },
            "themeJS": {
              "description": "Theme JS"
            },
            "themeSpritemap": {
              "description": "Theme Sprite Map"
            },
            "objectAction": {
              "description": "Object Action"
            },
            "workflowAction": {
              "description": "Workflow Action"
            },
            "notificationType": {
              "description": "Notification Type"
            },
            "oAuthApplicationUserAgent": {
              "description": "OAuth User Agent"
            },
            "oAuthApplicationHeadlessServer": {
              "description": "OAuth Headless Server"
            },
            "batch": {
              "description": "Batch"
            }
          }
        },
        "baseURL": {
          "type": "string",
          "description": "The base path from which all of the client extension’s defined resources are served."
        },
        "name": {
          "type": "string",
          "title": "Name",
          "description": "The client extension’s name (as it appears in the UI). A name is required for front-end client extensions."
        },
        "description": {
          "type": "string",
          "title": "Description",
          "description": "The client extension’s description."
        },
        "sourceCodeURL": {
          "type": "string",
          "default": "https://www.liferay.com",
          "title": "Source Code URL",
          "description": "The address to the client extension’s source repository."
        },
        "friendlyURLMapping": {
          "type": "string",
          "title": "Friendly URL Mapping",
          "description": "The mapping of a friendly URL prefix to the specific IFrame widget."
        },
        "htmlElementName": {
          "type": "string",
          "title": "HTML Element Name"
        },
        "portletCategoryName": {
          "type": "string",
          "title": "Widget Category Name",
          "description": "The menu category of the IFrame widget."
        },
        "url": {
          "type": "string",
          "title": "URL",
          "description": "The complete URL to the HTML page to embed within the IFrame widget."
        },
        "instanceable": {
          "type": "boolean",
          "default": false,
          "title": "Instanceable",
          "description": "Whether the IFrame widget can appear multiple times on a page."
        }
      },
      "required": [
        "type",
        "name",
        "url"
      ],
      "additionalProperties": true
    }
  },
  "type": "object",
  "properties": {
    "assemble": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/AssembleItem"
      }
    }
  },
  "additionalProperties": {
    "pattern": "(\\w|\\-)+",
    "type": "object",
    "$ref": "#/definitions/IFrame"
  }
}
